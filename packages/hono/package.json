{
    "name": "@pigeonhole/hono",
    "version": "0.0.0",
    "type": "module",
    "license": "MIT",
    "exports": {
        ".": {
            "development": "./src/index.ts",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": ["dist", "src"],
    "scripts": {
        "build": "vite build",
        "clean": "rm -rf dist",
        "lint": "oxlint .",
        "lint:fix": "oxlint --fix .",
        "fmt:check": "oxfmt .",
        "fmt": "oxfmt --write .",
        "typecheck": "tsc --noEmit",
        "test": "pnpm vitest run"
    },
    "dependencies": {
        "@pigeonhole/server": "workspace:^",
        "@pigeonhole/render": "workspace:^"
    },
    "devDependencies": {
        "hono": "^4",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "peerDependencies": {
        "hono": ">=4.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "pnpm@10.28.1"
}
